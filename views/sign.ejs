<!DOCTYPE html>
<html lang="en" dir="ltr">
    <%- include('./head.ejs')%>

<body>
    <div id="signcont">
    <div class="container">
        <form action="/sign" method="post">
            <div class="title">Login</div>
            <div class="input-box">
                <input type="text" placeholder="Enter Your Email" name="email" required>
                <div class="underline"></div>
            </div>
            <div class="input-box">
                <input type="password" placeholder="Enter Your Password" name="password" required>
                <div class="underline"></div>
            </div>
            <% if(errmsg!="" ) {%>
                <h5 class="errmg">
                    <%=errmsg %>
                </h5>
                <% } %>
                    <div class="input-box button">
                        <button type="submit" name="" value="Continue">Login</button>
                    </div>
                    <div class="toggle-link"><a href="/register"> Register</a> </div>
        </form>
    </div>
    </div>
</body>

</html>